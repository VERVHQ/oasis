{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .product-specs__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
    border-top: 1px solid rgba(var(--color-foreground), 0.08);
  }

  @media screen and (min-width: 750px) {
    .product-specs__grid {
      grid-template-columns: repeat(2, 1fr); /* 2 Column layout on Desktop */
      gap: 2rem;
    }
  }

  .product-specs__item {
    display: flex;
    justify-content: space-between;
    padding: 1rem 0;
    border-bottom: 1px solid rgba(var(--color-foreground), 0.08);
  }

  .product-specs__label {
    font-weight: bold;
    color: rgba(var(--color-foreground), 0.75);
  }

  .product-specs__value {
    text-align: right;
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section.id }}-padding">
    {%- if section.settings.heading != blank -%}
      <h2 class="title inline-richtext {{ section.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        {{ section.settings.heading }}
      </h2>
    {%- endif -%}

    <div class="product-specs__grid">
      {%- for block in section.blocks -%}
        <div class="product-specs__item" {{ block.shopify_attributes }}>
          <span class="product-specs__label">{{ block.settings.label }}</span>
          <span class="product-specs__value">
            {%- if block.settings.value != blank -%}
              {{ block.settings.value }}
            {%- else -%}
              {{ 'onboarding.product_title' | t }}
            {%- endif -%}
          </span>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Product Specifications",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "Technical Specifications",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        { "value": "h2", "label": "Small" },
        { "value": "h1", "label": "Medium" },
        { "value": "h0", "label": "Large" }
      ],
      "default": "h2",
      "label": "Heading Size"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top Padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "spec_item",
      "name": "Specification",
      "settings": [
        {
          "type": "text",
          "id": "label",
          "default": "Voltage",
          "label": "Label"
        },
        {
          "type": "text",
          "id": "value",
          "default": "220V",
          "label": "Value",
          "info": "Use 'Insert Dynamic Source' to connect to a Metafield."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Specifications",
      "blocks": [
        { "type": "spec_item", "settings": { "label": "Voltage", "value": "220V" } },
        { "type": "spec_item", "settings": { "label": "Dimensions", "value": "10x10x10" } },
        { "type": "spec_item", "settings": { "label": "Yield", "value": "95%" } }
      ]
    }
  ]
}
{% endschema %}
