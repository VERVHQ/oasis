{{ 'section-main-product-custom.css' | asset_url | stylesheet_tag }}
<script src="{{ 'product-custom.js' | asset_url }}" defer="defer"></script>

<section class="product-tabs-section section-{{ section.id }}-padding">
  <div class="page-width">
    
    <product-tabs>
      <div class="product-tabs__nav">
        {% for block in section.blocks %}
          <button class="product-tabs__btn {% if forloop.first %}active{% endif %}" 
                  data-target-id="tab-{{ section.id }}-{{ block.id }}">
            {{ block.settings.heading | escape }}
          </button>
        {% endfor %}
      </div>

      <div class="product-tabs__content-wrapper">
        {% for block in section.blocks %}
          <div id="tab-{{ section.id }}-{{ block.id }}" 
               class="product-tabs__pane {% if forloop.first %}active{% endif %}">
            <div class="rte">
              {% if block.type == 'description' %}
                {{ product.description }}
              {% else %}
                {{ block.settings.content }}
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </product-tabs>

  </div>
</section>

{% schema %}
{
  "name": "Product Tabs",
  "tag": "section",
  "class": "section",
  "settings": [
     {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top Padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 36
     }
  ],
  "blocks": [
    {
      "type": "tab",
      "name": "Tab",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Tab Heading",
          "default": "Specifications"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Tab Content",
          "default": "<p>Add content here</p>"
        }
      ]
    },
    {
      "type": "description",
      "name": "Product Description",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Tab Heading",
          "default": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Tabs",
      "blocks": [
        {
          "type": "description"
        },
        {
          "type": "tab",
          "settings": {
            "heading": "Specifications",
            "content": "<p>Width: 100cm<br>Height: 200cm</p>"
          }
        },
        {
          "type": "tab",
          "settings": {
            "heading": "How to use",
            "content": "<p>Step 1: Unbox<br>Step 2: Plug in</p>"
          }
        }
      ]
    }
  ]
}
{% endschema %}
