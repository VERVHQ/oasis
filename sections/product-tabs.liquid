{{ 'section-main-product-custom.css' | asset_url | stylesheet_tag }}
<script src="{{ 'product-custom.js' | asset_url }}" defer="defer"></script>

<section class="product-tabs-section section-{{ section.id }}-padding">
  <div class="page-width">
    
    <product-tabs>
      <div class="product-tabs__nav">
        {%- if section.settings.show_description_tab -%}
          <button class="product-tabs__btn active" 
                  data-target-id="tab-{{ section.id }}-description">
            {{ section.settings.description_tab_heading | default: 'Description' }}
          </button>
        {%- endif -%}
        {% for block in section.blocks %}
          <button class="product-tabs__btn {% if forloop.first and section.settings.show_description_tab == false %}active{% endif %}" 
                  data-target-id="tab-{{ section.id }}-{{ block.id }}">
            {{ block.settings.heading | escape }}
          </button>
        {% endfor %}
      </div>

      <div class="product-tabs__content-wrapper">
        {%- if section.settings.show_description_tab -%}
          <div id="tab-{{ section.id }}-description" 
               class="product-tabs__pane active">
            <div class="rte">
              {{ product.description }}
            </div>
          </div>
        {%- endif -%}
        {% for block in section.blocks %}
          <div id="tab-{{ section.id }}-{{ block.id }}" 
               class="product-tabs__pane {% if forloop.first and section.settings.show_description_tab == false %}active{% endif %}">
            <div class="rte">
              {%- if block.settings.html_content != blank -%}
                {{ block.settings.html_content }}
              {%- else -%}
                {{ block.settings.content }}
              {%- endif -%}
            </div>
          </div>
        {% endfor %}
      </div>
    </product-tabs>

  </div>
</section>

{% schema %}
{
  "name": "Product Tabs",
  "tag": "section",
  "class": "section",
  "settings": [
     {
      "type": "header",
      "content": "Description Tab"
    },
    {
      "type": "checkbox",
      "id": "show_description_tab",
      "label": "Show Description Tab",
      "default": true,
      "info": "Auto-fetches product description. This will always be the first tab."
    },
    {
      "type": "text",
      "id": "description_tab_heading",
      "label": "Description Tab Heading",
      "default": "Description"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top Padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 36
     }
  ],
  "blocks": [
    {
      "type": "tab",
      "name": "Tab",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Tab Heading",
          "default": "Specifications"
        },
        {
          "type": "html",
          "id": "content",
          "label": "Tab Content (HTML)",
          "default": "<p>Add content here</p>",
          "info": "Supports custom HTML and images."
        }
      ]
    },
    {
      "type": "html_tab",
      "name": "HTML Tab",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Tab Heading",
          "default": "Custom Tab"
        },
        {
          "type": "html",
          "id": "html_content",
          "label": "HTML Code",
          "info": "Enter any custom HTML code here. Images will render."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Tabs",
      "blocks": [

        {
          "type": "tab",
          "settings": {
            "heading": "Specifications",
            "content": "<p>Width: 100cm<br>Height: 200cm</p>"
          }
        },
        {
          "type": "tab",
          "settings": {
            "heading": "How to use",
            "content": "<p>Step 1: Unbox<br>Step 2: Plug in</p>"
          }
        }
      ]
    }
  ]
}
{% endschema %}
