{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: 0;
    padding-bottom: 0;
  }
  
  /* Parallax Overlay Effect */
  #shopify-section-{{ section.id }} {
    position: -webkit-sticky; /* Safari */
    position: sticky;
    top: 0;
    z-index: 0;
  }

  #shopify-section-{{ section.id }} ~ .shopify-section {
    position: relative;
    z-index: 1;
    background-color: var(--gradient-background); /* Default to theme background */
  }

  {%- assign opacity_decimal = section.settings.gradient_opacity | divided_by: 100.0 -%}

  .hero-slider {
    position: relative;
    width: 100%;
    height: {{ section.settings.desktop_height }}px;
    min-height: unset;
    overflow: hidden;
    border-top-left-radius: 24px;
    border-top-right-radius: 24px;
  }

  @media screen and (max-width: 749px) {
    .hero-slider {
      height: {{ section.settings.mobile_height }}px;
    }
  }

  .hero-slider__container {
    display: flex; /* Flex but effectively single item */
    height: 100%;
    width: 100%;
  }

  .hero-slide {
    position: relative;
    min-width: 100%;
    height: 100%;
    /* Active class styles hardcoded since strict single slide */
    opacity: 1; 
  }

  .hero-slide__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: {{ section.settings.image_alignment }};
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
  }

  .hero-slide__image--mobile {
    display: none;
  }

  .hero-slide__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0, {{ section.settings.overlay_opacity | divided_by: 100.0 }});
    z-index: 2;
    pointer-events: none;
  }

  .hero-slide__gradient {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: {{ section.settings.gradient_height }}%;
    background: linear-gradient(to top, {{ section.settings.gradient_color | color_modify: 'alpha', opacity_decimal }}, transparent);
    z-index: 2;
    pointer-events: none;
  }

  .hero-slide__content-wrapper {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 3;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding-bottom: 60px; /* Keep bottom spacing */
    pointer-events: none; 
  }

  .hero-slide__bottom-row {
    display: flex;
    justify-content: flex-start;
    align-items: flex-end;
    width: 100%;
    max-width: var(--page-width); /* Same as nav bar container width */
    margin: 0 auto; /* Center the container */
    padding: 0 1.5rem; /* Mobile: matches .page-width default */
    pointer-events: auto;
  }

  .hero-slide__text-group {
    max-width: 100%;
    color: #fff;
    text-align: left;
  }

  .hero-slide__heading {
    margin: 0 0 16px;
    color: inherit;
    font-size: calc(var(--font-heading-scale) * 6rem);
    line-height: 1.1;
    text-transform: uppercase;
    font-weight: 700;
    /* Static visibility for single slide */
    opacity: 1;
    transform: translateY(0);
    text-shadow: 2px 2px 10px rgba(0,0,0,0.5); /* Drop shadow added */
  }

  .hero-slide__subtext {
    font-size: 2rem;
    margin: 0;
    color: rgba(255,255,255,0.9);
    /* Static visibility for single slide */
    opacity: 1;
    transform: translateY(0);
  }

  /* Tablet: match nav bar padding */
  @media screen and (min-width: 750px) {
    .hero-slide__bottom-row {
      padding: 0 3.2rem;
    }
  }

  /* Desktop: match nav bar padding */
  @media screen and (min-width: 990px) {
    .hero-slide__bottom-row {
      padding: 0 5rem;
    }
  }

  @media screen and (max-width: 749px) {
    .hero-slide__image--desktop {
      display: none;
    }
    .hero-slide__image--mobile {
      display: block;
    }
    
    .hero-slide__content-wrapper {
      padding: 30px 20px;
    }

    .hero-slide__bottom-row {
      flex-direction: column;
      align-items: flex-start;
      gap: 30px;
    }

    .hero-slide__text-group {
      max-width: 100%;
    }
    
    .hero-slide__heading {
      font-size: 3.5rem;
    }
  }
{%- endstyle -%}

<div class="hero-slider section-{{ section.id }}-padding">
  <div class="hero-slider__container">
      <div class="hero-slide active">
        {%- if article.image != blank -%}
          {{ article.image | image_url: width: 3000 | image_tag:
            loading: 'eager',
            class: 'hero-slide__image hero-slide__image--desktop',
            widths: '1100, 1500, 1780, 2000, 3000',
            sizes: '100vw',
            alt: article.title | escape
          }}
          {{ article.image | image_url: width: 1500 | image_tag:
            loading: 'eager',
            class: 'hero-slide__image hero-slide__image--mobile',
            widths: '450, 660, 900, 1500',
            sizes: '100vw',
            alt: article.title | escape
          }}
        {%- else -%}
          <!-- Placeholder if no image -->
          <div class="hero-slide__image" style="background-color: {{ section.settings.gradient_color }};"></div>
        {%- endif -%}

        <div class="hero-slide__overlay"></div>
        <div class="hero-slide__gradient"></div>

        <div class="hero-slide__content-wrapper">
          <div class="hero-slide__bottom-row">
            <div class="hero-slide__text-group">
                <h1 class="hero-slide__heading">{{ article.title }}</h1>
                {%- if article.excerpt != blank -%}
                  <div class="hero-slide__subtext">{{ article.excerpt }}</div>
                {%- endif -%}
            </div>
          </div>
        </div>
      </div>
  </div>
</div>

{% schema %}
{
  "name": "Blog New Header",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "select",
      "id": "image_alignment",
      "label": "Image Alignment",
      "options": [
        {
          "value": "center center",
          "label": "Center"
        },
        {
          "value": "center bottom",
          "label": "Bottom Center"
        },
        {
          "value": "center top",
          "label": "Top Center"
        }
      ],
      "default": "center bottom"
    },
    {
      "type": "range",
      "id": "desktop_height",
      "min": 400,
      "max": 1100,
      "step": 10,
      "unit": "px",
      "label": "Desktop Slider Height",
      "default": 700
    },
    {
      "type": "range",
      "id": "mobile_height",
      "min": 300,
      "max": 800,
      "step": 10,
      "unit": "px",
      "label": "Mobile Slider Height",
      "default": 500
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 90,
      "step": 10,
      "unit": "%",
      "label": "Image Overlay Opacity",
      "default": 10
    },
    {
      "type": "header",
      "content": "Gradient Settings"
    },
    {
      "type": "color",
      "id": "gradient_color",
      "label": "Gradient Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "gradient_height",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Gradient Height/Distance",
      "default": 50
    },
    {
      "type": "range",
      "id": "gradient_opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Gradient Opacity",
      "default": 70
    },
    {
      "type": "paragraph",
      "content": "This section automatically displays the blog post's featured image, title, and excerpt."
    }
  ],
  "presets": [
    {
      "name": "Blog New Header"
    }
  ]
}
{% endschema %}
