{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: 0;
    padding-bottom: 0;
  }
  
  /* Parallax Overlay Effect */
  #shopify-section-{{ section.id }} {
    position: -webkit-sticky; /* Safari */
    position: sticky;
    top: 0;
    z-index: 0;
  }

  /* All sections after the hero must have solid background to cover it */
  #shopify-section-{{ section.id }} ~ .shopify-section {
    position: relative;
    z-index: 1;
    background-color: rgb(var(--color-background)); /* Solid page background */
    margin-top: 0 !important; /* Remove transparent margin */
    padding-top: var(--spacing-sections-mobile); /* Use padding for spacing instead */
    margin-bottom: 0 !important; /* Remove transparent bottom margin (gap before footer) */
    padding-bottom: var(--spacing-sections-mobile); /* Ensure spacing is maintained with background */
  }

  @media screen and (min-width: 750px) {
    #shopify-section-{{ section.id }} ~ .shopify-section {
      padding-top: var(--spacing-sections-desktop);
      padding-bottom: var(--spacing-sections-desktop);
    }
  }

  {%- assign opacity_decimal = section.settings.gradient_opacity | divided_by: 100.0 -%}

  .hero-slider {
    position: relative;
    width: 100%;
    height: {{ section.settings.desktop_height }}px;
    min-height: unset;
    overflow: hidden;
    border-top-left-radius: 24px;
    border-top-right-radius: 24px;
  }

  @media screen and (max-width: 749px) {
    .hero-slider {
      height: {{ section.settings.mobile_height }}px;
    }
  }

  .hero-slider__container {
    display: flex; /* Flex but effectively single item */
    height: 100%;
    width: 100%;
  }

  .hero-slide {
    position: relative;
    min-width: 100%;
    height: 100%;
    /* Active class styles hardcoded since strict single slide */
    opacity: 1; 
  }

  .hero-slide__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: {{ section.settings.image_alignment }};
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
  }

  .hero-slide__image--mobile {
    display: none;
  }

  .hero-slide__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0, {{ section.settings.overlay_opacity | divided_by: 100.0 }});
    z-index: 2;
    pointer-events: none;
  }

    /* Pseudo-element gradient handled in .hero-slide::after for robustness */
  }
  
  .hero-slide::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 85%;
    background: linear-gradient(to top, rgba(0,0,0,0.95) 0%, rgba(0,0,0,0.7) 40%, transparent 100%) !important;
    z-index: 3;
    pointer-events: none;
  }

  .hero-slide__content-wrapper {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 3;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding-bottom: 60px; /* Keep bottom spacing */
    pointer-events: none; 
  }

  .hero-slide__bottom-row {
    display: flex;
    justify-content: flex-start;
    align-items: flex-end;
    width: 100%;
    max-width: var(--page-width); /* Same as nav bar container width */
    margin: 0 auto; /* Center the container */
    padding: 0 1.5rem; /* Mobile: matches .page-width default */
    pointer-events: auto;
  }

  .hero-slide__text-group {
    max-width: 100%;
    color: #fff;
    text-align: left;
  }

  .hero-slide__heading {
    margin: 0 0 16px;
    color: inherit;
    font-size: calc(var(--font-heading-scale) * 6rem);
    line-height: 1.1;
    text-transform: uppercase;
    font-weight: 700;
    /* Static visibility for single slide */
    opacity: 1;
    transform: translateY(0);
    text-shadow: 2px 2px 10px rgba(0,0,0,0.5); /* Drop shadow added */
  }

  .hero-slide__subtext {
    font-size: 2rem;
    margin: 0;
    color: rgba(255,255,255,0.9);
    /* Static visibility for single slide */
    opacity: 1;
    transform: translateY(0);
  }

  /* Tablet: match nav bar padding */
  @media screen and (min-width: 750px) {
    .hero-slide__bottom-row {
      padding: 0 3.2rem;
    }
  }

  /* Desktop: match nav bar padding */
  @media screen and (min-width: 990px) {
    .hero-slide__bottom-row {
      padding: 0 5rem;
    }
  }

  @media screen and (max-width: 749px) {
    .hero-slide__image--desktop {
      display: none;
    }
    .hero-slide__image--mobile {
      display: block;
    }
    
    .hero-slide__content-wrapper {
      padding: 30px 20px;
    }

    .hero-slide__bottom-row {
      flex-direction: column;
      align-items: flex-start;
      gap: 30px;
    }

    .hero-slide__text-group {
      max-width: 100%;
    }
    
    .hero-slide__heading {
      font-size: 3.5rem;
    }
  }
{%- endstyle -%}

<div class="hero-slider section-{{ section.id }}-padding" id="HeroSlider-{{ section.id }}">
  <div class="hero-slider__container">
      <div class="hero-slide active">
        {%- if article.image != blank -%}
          {{ article.image | image_url: width: 3000 | image_tag:
            loading: 'eager',
            class: 'hero-slide__image hero-slide__image--desktop',
            widths: '1100, 1500, 1780, 2000, 3000',
            sizes: '100vw',
            alt: article.title | escape
          }}
          {{ article.image | image_url: width: 1500 | image_tag:
            loading: 'eager',
            class: 'hero-slide__image hero-slide__image--mobile',
            widths: '450, 660, 900, 1500',
            sizes: '100vw',
            alt: article.title | escape
          }}
        {%- else -%}
          <!-- Placeholder if no image -->
          <div class="hero-slide__image" style="background-color: {{ section.settings.gradient_color }};"></div>
        {%- endif -%}

        <div class="hero-slide__overlay" style="will-change: background-color; transition: background-color 0.1s linear;"></div>
        <!-- Gradient handled by CSS pseudo-element -->

        <div class="hero-slide__content-wrapper">
          <div class="hero-slide__bottom-row">
            <div class="hero-slide__text-group">
                <h1 class="hero-slide__heading">{{ article.title }}</h1>
                {%- if article.excerpt != blank -%}
                  <div class="hero-slide__subtext">{{ article.excerpt }}</div>
                {%- endif -%}
                <!-- Frosted Pills Row: Author/Date + Tags -->
                <div class="hero-slide__pills-row" style="display: flex; flex-wrap: wrap; align-items: center; gap: 1rem; margin-top: 1.5rem;">
                  
                  <!-- Author and Date Pill -->
                  <div class="hero-slide__meta-pill" style="
                    display: inline-flex;
                    align-items: center;
                    gap: 0.8rem;
                    padding: 0.6rem 1.4rem;
                    height: 3.2rem;
                    border-radius: 50px;
                    font-size: 1.3rem;
                    background: rgba(255, 255, 255, 0.15);
                    backdrop-filter: blur(10px);
                    -webkit-backdrop-filter: blur(10px);
                    border: 1px solid rgba(255, 255, 255, 0.2);
                    color: #000;
                    box-shadow: 0 4px 15px rgba(255, 255, 255, 0.1);
                  ">
                    <span class="hero-slide__author" style="font-weight: 600;">{{ article.author }}</span>
                    <span style="opacity: 0.5;">â€¢</span>
                    <span class="hero-slide__date">{{ article.published_at | date: "%B %d, %Y" }}</span>
                  </div>

                  <!-- Tags Pills -->
                  {%- if article.tags.size > 0 -%}
                    {%- for tag in article.tags -%}
                      <span class="hero-slide__tag" style="
                        display: inline-flex;
                        align-items: center;
                        padding: 0.6rem 1.4rem;
                        height: 3.2rem;
                        border-radius: 50px;
                        font-size: 1.3rem;
                        font-weight: 500;
                        background: rgba(255, 255, 255, 0.15);
                        backdrop-filter: blur(10px);
                        -webkit-backdrop-filter: blur(10px);
                        border: 1px solid rgba(255, 255, 255, 0.2);
                        color: #000;
                        box-shadow: 0 4px 15px rgba(255, 255, 255, 0.1);
                      ">{{ tag }}</span>
                    {%- endfor -%}
                  {%- endif -%}

                </div>
            </div>
          </div>
        </div>
      </div>
  </div>
</div>

<script>
  (function() {
    function initHeroEffect() {
      // Robust selection using internal ID
      const heroWrapper = document.getElementById('HeroSlider-{{ section.id }}');
      if (!heroWrapper) return false;
      
      const overlay = heroWrapper.querySelector('.hero-slide__overlay');
      if (!overlay) return false;

      // Check if we already attached (avoid duplicate listeners)
      if (heroWrapper.dataset.scrollEffectAttached) return true;

      const heroHeight = heroWrapper.offsetHeight;
      const baseOpacity = {{ section.settings.overlay_opacity | divided_by: 100.0 }};

      const handleScroll = () => {
          const scrollAmount = window.scrollY;
          // Calculate new alpha
          // Aggressive darkening: reach full opacity (0.95) when scrolled 60% of hero height
          let addedOpacity = (scrollAmount / (heroHeight * 0.6)) * 1.0; 
          let newOpacity = baseOpacity + addedOpacity;
          
          // Clamp
          if (newOpacity > 0.95) newOpacity = 0.95;
          if (newOpacity < baseOpacity) newOpacity = baseOpacity;
          
          overlay.style.backgroundColor = 'rgba(0, 0, 0, ' + newOpacity + ')';
      };

      window.addEventListener('scroll', handleScroll, { passive: true });
      // Initial call
      handleScroll();
      
      heroWrapper.dataset.scrollEffectAttached = 'true';
      console.log('Hero darken effect attached successfully to', heroWrapper.id);
      return true;
    }

    // Attempt 1: Immediate
    if (!initHeroEffect()) {
      // Attempt 2: DOMContentLoaded
      document.addEventListener('DOMContentLoaded', initHeroEffect);
      // Attempt 3: Window Load
      window.addEventListener('load', initHeroEffect);
      // Attempt 4: Polling for 2 seconds (safe fallback for dynamic frameworks/slow render)
      const interval = setInterval(() => {
        if (initHeroEffect()) clearInterval(interval);
      }, 200);
      // Stop polling after 4 seconds
      setTimeout(() => clearInterval(interval), 4000);
    }
  })();
</script>

