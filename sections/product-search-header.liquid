{{ 'new-blog-ui.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    --pt: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    --pb: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    --content-width: {{ section.settings.page_width }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      --pt: {{ section.settings.padding_top }}px;
      --pb: {{ section.settings.padding_bottom }}px;
    }
  }

  .new-blog-ui {
    --card-radius: {{ section.settings.card_corner_radius }}px;
    max-width: var(--content-width);
    margin: 0 auto;
    padding-left: 20px;
    padding-right: 20px;
    width: 100%;
  }
{%- endstyle -%}

<div class="new-blog-ui section-{{ section.id }}-padding">
  
  <div class="new-blog-ui__header">
    <div class="new-blog-ui__filters">
      <span class="new-blog-ui__label">Sort By</span>
      <div class="new-blog-ui__select-wrapper">
        <select id="SortBy" class="new-blog-ui__select">
          {%- for option in collection.sort_options -%}
            <option value="{{ option.value | escape }}" {% if option.value == collection.sort_by %}selected="selected"{% endif %}>
              {{ option.name | escape }}
            </option>
          {%- endfor -%}
        </select>
        <svg class="new-blog-ui__select-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="6 9 12 15 18 9"></polyline>
        </svg>
      </div>

      <div class="new-blog-ui__checkbox-wrapper" style="display: flex; align-items: center; gap: 8px; background: #fff; padding: 0 16px; height: 44px; border-radius: 50px; border: 1px solid #e5e7eb;">
        <input type="checkbox" id="FilterAvailability" {% if current_tags contains 'filter_availability' %}checked{% endif %} style="width: 16px; height: 16px; cursor: pointer;">
        <label for="FilterAvailability" style="font-size: 0.9rem; font-weight: 500; cursor: pointer;">In Stock Only</label>
      </div>
    </div>

    <script>
      // Sort By Logic
      document.getElementById('SortBy').addEventListener('change', function(e) {
        var value = e.target.value;
        var url = new URL(window.location.href);
        url.searchParams.set('sort_by', value);
        window.location.href = url.href;
      });

      // Availability Filter Logic (Simple query param toggle if supported, or tag)
      // Since standard availability filtering is complex without facets, we'll try a common pattern:
      // appending filter.v.availability=1 (Standard Shopify 2.0)
      document.getElementById('FilterAvailability').addEventListener('change', function(e) {
        var url = new URL(window.location.href);
        if (e.target.checked) {
          url.searchParams.set('filter.v.availability', '1');
        } else {
          url.searchParams.delete('filter.v.availability');
        }
        window.location.href = url.href;
      });
      
      // Check checkbox state on load based on URL params
      document.addEventListener('DOMContentLoaded', function() {
        var url = new URL(window.location.href);
        if (url.searchParams.get('filter.v.availability') === '1') {
           document.getElementById('FilterAvailability').checked = true;
        }
      });
    </script>

    <div class="new-blog-ui__search">
      <form action="{{ routes.search_url }}" method="get" role="search">
        <input type="hidden" name="type" value="product">
        <input
          class="new-blog-ui__search-input"
          type="search"
          name="q"
          value="{{ search.terms | escape }}"
          placeholder="Search Products..."
        >
        <button type="submit" class="new-blog-ui__search-button" aria-label="Search">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="11" cy="11" r="8"></circle>
                <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
            </svg>
        </button>
      </form>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Product Search Header",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "range",
      "id": "page_width",
      "min": 1000,
      "max": 1600,
      "step": 40,
      "unit": "px",
      "label": "Content Width",
      "default": 1400
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top Padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Product Search Header"
    }
  ]
}
{% endschema %}
